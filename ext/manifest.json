{
  "name": "MasterPassword chrome",
  "version": "0.99.4",
  "manifest_version": 2,
  "description": "Chrome extension implementation of masterpassword",
  "author": "Torbjorn Tyridal (ttyridal)",
  "homepage_url": "https://github.com/ttyridal/masterpassword-chrome",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  /*"default_locale": "en",*/
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "incognito": "split",
  "options_page": "src/options/index.html",
  "options_ui":     {
      "page": "src/options/options.html",
      "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "MasterPassword",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_scripts": [
  {"matches":["<all_urls>"], "js": ["src/browser_action/content.js"]}
  ],
  "permissions": [
    "clipboardWrite",
    "storage",
    "tabs"
  ]
}
